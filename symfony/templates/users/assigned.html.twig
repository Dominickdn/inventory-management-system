{% extends 'base.html.twig' %}
{% block body %}
<div class="overflow-x-auto  w-5/6 mx-auto pl-10 pt-5">
    <div class="bg-white shadow rounded-lg p-6 max-w-sm">
        <h2 class="text-xl font-semibold mb-2">{{ user.name }} {{ user.surname }}</h2>
        <p class="text-gray-600 mb-1"><strong>Email:</strong> {{ user.email }}</p>
        <p class="text-gray-600 mb-1"><strong>Department:</strong> {{ user.department }}</p>
        {% if user.position is defined %}
            <p class="text-gray-600"><strong>Position:</strong> {{ user.position }}</p>
        {% endif %}
    </div>
</div>

<div class="max-w-6xl mx-auto mt-5">

    <div class="overflow-x-auto w-5/6 mx-auto">
        {% if title is defined %}
            <h1 class="text-3xl font-bold mb-6 text-gray-800">{{ title }}</h1>
        {% endif %}

        <table class="min-w-full text-left text-xs text-gray-700 bg-white shadow-md">
            <thead class="bg-gray-100 border-b">
                <tr>
                    <th class="px-6 py-3 font-semibold">ID</th>
                    <th class="px-6 py-3 font-semibold">Serial Number</th>
                    <th class="px-6 py-3 font-semibold">User Name</th>
                    <th class="px-6 py-3 font-semibold">Inventory Name</th>
                    <th class="px-6 py-3 font-semibold">Assigned At</th>
                    <th class="px-6 py-3 font-semibold">Quality Description</th>
                    <th class="px-6 py-3 font-semibold">Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for item in assignedItems %}
                    <tr class="border-b hover:bg-gray-50 transition cursor-pointer"
                        >

                        <td class="px-4 py-2">{{ item.id }}</td>
                        <td class="px-4 py-2">{{ item.serialNumber }}</td>
                        <td class="px-4 py-2">{{ item.userId.name }}</td>
                        <td class="px-4 py-2">{{ item.inventoryId.name }}</td>
                        <td class="px-4 py-2">{{ item.assignedAt|date('Y-m-d H:i') }}</td>
                        <td class="px-4 py-2">{{ item.qualityDescription }}</td>
                        <td class="px-4 py-2">
                            <form method="post" action="{{ path('app_user_unassign_item', {'userId': item.userId.id, 'assignedItemId': item.id}) }}" onsubmit="return confirm('Are you sure you want to unassign this item?');">
                                <button type="submit" class="px-2 py-1 bg-gray-400 text-white rounded hover:bg-gray-500">
                                    Unassign
                                </button>
                            </form>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td class="px-6 py-4 text-center text-gray-500" colspan="6">
                            No records found.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="w-5/6 mx-auto pl-10 p-4">
        <a href="{{ path('app_users') }}"
        class="px-4 py-1 bg-green-400 text-[#2a2235] font-semibold rounded hover:bg-green-500">
            <-
        </a>
</div>
{% endblock %}
