{% extends 'base.html.twig' %}
{% block body %}
<div class="overflow-x-auto  w-5/6 mx-auto pl-10">
    <div class="bg-white shadow rounded-lg p-6 max-w-sm">
        <h2 class="text-xl font-semibold mb-2">{{ user.name }} {{ user.surname }}</h2>
        <p class="text-gray-600 mb-1"><strong>Email:</strong> {{ user.email }}</p>
        <p class="text-gray-600 mb-1"><strong>Department:</strong> {{ user.department }}</p>
        {% if user.position is defined %}
            <p class="text-gray-600"><strong>Position:</strong> {{ user.position }}</p>
        {% endif %}
    </div>
</div>
{% include 'components/table.html.twig' with {
    title: 'Assigned Items',
    items: assignedItems,
    columns: [
        { label: 'ID', field: 'id' },
        { label: 'Serial Number', field: 'serialNumber' },
        { label: 'User ID', field: 'userId' },
        { label: 'Inventory ID', field: 'inventoryId' },
        { label: 'Assigned At', field: 'assignedAt' },
        { label: 'Quality Desc', field: 'qualityDescription' }
    ],
    pagination: pagination,
    row_url: '/users/{id}/assigned-items'
} %}
<div class="w-5/6 mx-auto pl-10">
        <a href="{{ path('app_users') }}"
        class="px-4 py-1 bg-green-400 text-[#2a2235] font-semibold rounded hover:bg-green-500">
            <-
        </a>
</div>
{% endblock %}
