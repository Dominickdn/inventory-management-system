{% extends 'base.html.twig' %}

{% block body %}

<div class="max-w-xl mx-auto mt-10 p-6 ">
    <h1 class="text-2xl font-bold mb-6">Add Inventory Item</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.type) }}
            {{ form_widget(form.type, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>


        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Create User
        </button>
        
    {{ form_end(form) }}
</div>

{% endblock %}