{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-xl mx-auto mt-10 p-6 ">
    <h1 class="text-2xl font-bold mb-6">Assign Inventory to User</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div>
        {{ form_label(form.user, 'User', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(form.user, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        {{ form_errors(form.user) }}
    </div>

    <div>
        {{ form_label(form.inventoryId, 'Inventory', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(form.inventoryId, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        {{ form_errors(form.inventoryId) }}
    </div>

    <div>
        {{ form_label(form.qualityDescription, 'Quality Description', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(form.qualityDescription, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Optional quality notes'}}) }}
        {{ form_errors(form.qualityDescription) }}
    </div>

    <div>
        {{ form_label(form.serialNumber, 'Serial Number', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(form.serialNumber, {'attr': {'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'Optional quality notes'}}) }}
        {{ form_errors(form.serialNumber) }}
    </div>

    <div class="pt-4">
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Assign
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}